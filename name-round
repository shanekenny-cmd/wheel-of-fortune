    }

    public static int playerQuan()
    {
        System.out.println("Please enter how many player? (2,4,or 6) ");
        int numPlayers  = sc.nextInt();

        if (numPlayers % 2 == 0 && numPlayers > 0 && numPlayers < 8) {
            players = new Player[numPlayers];
        }

        else
        {
            System.out.println("That's an incorrect number of players!!( ");

        }

        return numPlayers;

    }
    
